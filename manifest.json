{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 2,
  "name": "HTML5 Syncer",
  "version": "1.1.1",
  "content_scripts": [
    {
	      "all_frames": true,
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
   "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["tabs","activeTab", "storage"],
  "browser_action": {
    "default_icon": "ct.png",
    "default_popup": "index.html",
    "default_title": "Scan for videos/audio streams"
  }
}
